
class Solution
{
    public:
   
    int missingNumber(int arr[], int n) 
    { 
     unordered_set<int> set;

    
    for (int i = 0; i < n; i++) {
        if (arr[i] > 0) {
            set.insert(arr[i]);
        }
    }

    
    int missingNumber = 1;
    while (set.find(missingNumber) != set.end()) {
        missingNumber++;
    }

    return missingNumber;
    } 
};
